      <style name="Theme.QuizLeaderboardSwimUp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

      <style name="Theme.QuizLeaderboardSwimUp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
